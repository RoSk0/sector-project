{
    "name": "sparksinteractive/sector-project",
    "type": "project",
    "description": "A composer-based Drupal project template using Sector.",
    "homepage": "https://www.sector.org.nz",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Sparks Interactive",
            "role": "Development"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "^8.0",
        "drupal/core-composer-scaffold": "^8.8",
        "drush/drush": "^9.0",
        "oomphinc/composer-installers-extender": "^2.0",
        "sparksinteractive/sector-distribution": "5.0.x-dev"
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "repositories": {
        "packagist.drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset.packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "ckeditor-plugin/link": {
            "type": "package",
            "package": {
                "name": "ckeditor-plugin/link",
                "version": "4.14.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/link/releases/link_4.14.0.zip",
                    "type": "zip"
                }
            }
        },
        "ckeditor-plugin/fakeobjects": {
            "type": "package",
            "package": {
                "name": "ckeditor-plugin/fakeobjects",
                "version": "4.14.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/fakeobjects/releases/fakeobjects_4.14.0.zip",
                    "type": "zip"
                }
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-install-cmd": [
            "Sector\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "Sector\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-update-cmd": [
            "Sector\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-update-cmd": [
            "Sector\\composer\\ScriptHandler::createRequiredFiles"
        ]
    }
}
